<?xml version="1.0" encoding="utf-8"?>


<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorToggleUnchecked" /> <!-- Set the background color for checked state -->
            <corners android:radius="20dp" /> <!-- Set the corner radius -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorToggleChecked" /> <!-- Set the background color for unchecked state -->
            <corners android:radius="20dp" /> <!-- Set the corner radius -->
        </shape>
    </item>
</selector>

